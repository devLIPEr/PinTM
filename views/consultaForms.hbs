<!DOCTYPE html>
<html lang="en">
{{> headController }}
<body>
    {{> headerController }}
    <main class="mainConsulta">
        <div class="background-consulta">
            <h1 id="consultaTitle">HORÁRIOS</h1>

            <form class="consultaForm" action="/selectSchedule" method="POST">
                <div id="cursoField">
                    <input type="text" id="nomeCurso" name="nomeCurso" placeholder="Curso:" required>
                </div>
                
                <div id="materiaField">
                    <input type="text" id="nomeMateria" name="nomeMateria" placeholder="Matéria:" required>            
                </div>
                
                <div id="coiField">
                    <select name="coi" class="coi" aria-placeholder="COI:">
                        <option value="coi">COI</option>
                        <option value="coi">COI-A</option>
                        <option value="coi">COI-B</option>
                        <option value="coi">COI-C</option>
                        <option value="coi">COI-D</option>
                    </select>
                </div>
                <input style = "display : none;" type="submit" value = "enviar" id = "submit-button">
            </form>

            <button onclick="document.querySelector('#submit-button').click()"  id = "send-button" class = "btnIndex"> <p>Buscar</p> </button>

        </div>
    </main>
    {{> footer }}
</body>
</html>