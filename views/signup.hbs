<!DOCTYPE html>
<html lang="en">
{{> headController }}
<body class="h-screen">
    {{> header }}
    <main class="h-4/5 flex flex-col justify-center items-center">
      <div class="flex flex-col justify-center items-center bg-secondary h-4/5 md:w-2/5 lg:w-1/3 xl:w-1/4 rounded-3xl p-4">
        <h2 class="text-4xl font-black mb-8">Registro</h2>
        <input class="mb-6 p-2 rounded-xl w-full outline-none" id="name" type="text" placeholder="Insira seu nome de usuário...">
        <input class="mb-6 p-2 rounded-xl w-full outline-none" id="email" type="text" placeholder="Insira seu email...">
        <input class="mb-6 p-2 rounded-xl w-full outline-none" id="password" type="password" placeholder="Insira sua senha...">
        <p onclick="document.getElementById('colorBlind').click()" class="flex justify-between mb-6 bg-white w-full p-2 rounded-xl text-gray-400">Modo daltonismo<input class="mx-4" type="checkbox" id="colorBlind"></p>
        <button onclick="sendSignup()" class="mb-6 bg-yellow-300 w-1/3 rounded-lg p-1 py-2">Enviar</button>
        <a class="text-gray-700 underline" href="./signin">Já possui uma conta? Faça o login.</a>
    </div>
    </main>
    {{> footer }}
    <script src="../js/index.js"></script>
    <script>
        document.getElementById("email").addEventListener('keydown', (key) => {
            if(key.key == 'Enter'){
                sendLogin();
            }
        });
        document.getElementById("name").addEventListener('keydown', (key) => {
            if(key.key == 'Enter'){
                sendLogin();
            }
        });
        document.getElementById("password").addEventListener('keydown', (key) => {
            if(key.key == 'Enter'){
                sendLogin();
            }
        });

        function sendSignup(){
            let email = document.getElementById("email").value;
            let password = document.getElementById("password").value;
            let name = document.getElementById("name").value;
            let colorBlind = document.getElementById("colorBlind").checked;
            signUp(email, password, name, colorBlind);
        }
    </script>
</body>
</html>